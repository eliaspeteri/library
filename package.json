{
  "name": "library",
  "version": "1.0.0",
  "description": "This full-stack application depicting a regular library collection has been created as a programming exercise for recruit purposes.",
  "main": "server/dist/index.js",
  "engines": {
    "node": "12.14.1"
  },
  "scripts": {
    "start:production": "npm --prefix ./server/ start",
    "start:dev": "concurrently --kill-others -c cyan,magenta -n CLIENT,SERVER \"cd client/ && npm run dev\" \"npm --prefix ./server/ run dev\"",
    "front:install:build": "npm run build --prefix ./client/",
    "server:install:compile": "npm run compile --prefix ./server/",
    "preinstall": "npm run server:install:compile",
    "postinstall": "npm run front:install:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliaspeteri/library.git"
  },
  "keywords": [
    "axios",
    "mongoose",
    "mongodb",
    "node",
    "express",
    "react",
    "next",
    "nextjs",
    "typescript"
  ],
  "author": "Elias Peteri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eliaspeteri/library/issues"
  },
  "homepage": "https://github.com/eliaspeteri/library#readme",
  "dependencies": {
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/react": "^17.0.38",
    "concurrently": "^7.0.0"
  },
  "cacheDirectories": [
    ".next/cache"
  ]
}
